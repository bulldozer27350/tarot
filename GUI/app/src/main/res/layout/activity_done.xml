<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gui.counting.tarot.fr.gui.DoneActivity">

    <SeekBar
        android:id="@+id/seekScore"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:max="91"
        android:maxWidth="300dp"
        tools:minWidth="300dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekScore"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:text="Score de l'attaque" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Calculer les scores" />

    <TextView
        android:id="@+id/currentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="0" />

    <ToggleButton
        android:id="@+id/toggle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="Petit"
        android:textOn="Petit"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seekScore"
        android:layout_marginTop="13dp"
        android:text="Bouts pour l'attaque" />

    <ToggleButton
        android:id="@+id/toggle21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggle1"
        android:layout_alignBottom="@+id/toggle1"
        android:layout_centerHorizontal="true"
        android:text="ToggleButton"
        android:textOff="21"
        android:textOn="21" />

    <ToggleButton
        android:id="@+id/toggleExcuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggle21"
        android:layout_alignBottom="@+id/toggle21"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:text="ToggleButton"
        android:textOff="Excuse"
        android:textOn="Excuse" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggle1"
        android:layout_marginTop="11dp"
        android:text="Contrat" />

    <RadioGroup
        android:id="@+id/contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioPetite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/contract"
            android:layout_alignStart="@+id/toggle1"
            android:layout_weight="1"
            android:text="Petite" />

        <RadioButton
            android:id="@+id/radioGarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Garde" />

        <RadioButton
            android:id="@+id/radioGardeSans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Garde Sans" />

        <RadioButton
            android:id="@+id/radioGardeContre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Garde contre" />

    </RadioGroup>

    <TextView
        android:id="@+id/taker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preneur"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/spinnerTaker" />

    <Spinner
        android:id="@+id/spinnerCalled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/calles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appelé"
        android:layout_above="@+id/spinnerCalled" />

    <Spinner
        android:id="@+id/spinnerTaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calles"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <CheckBox
        android:id="@+id/littleAtEndCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/toggle1"
        android:layout_alignParentTop="true"
        android:text="Petit au bout" />

    <Spinner
        android:id="@+id/spinnerLittleAtEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/handle1" />

    <TextView
        android:id="@+id/miseryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/littleAtEndCheckBox"
        android:text="Misères" />

    <Spinner
        android:id="@+id/spinnerMiseries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/spinnerLittleAtEnd"
        android:layout_below="@+id/littleAtEndCheckBox" />

    <ToggleButton
        android:id="@+id/toggleChelemAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toggleChelemDefense"
        android:layout_alignStart="@+id/toggleChelemDefense"
        android:text="ToggleButton"
        android:textOff="Chelem Attaque"
        android:textOn="Chelem Attaque" />

    <ToggleButton
        android:id="@+id/toggleChelemDefense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/toggle1"
        android:text="ToggleButton"
        android:textOff="Chelem défense"
        android:textOn="Chelem défense" />

    <Spinner
        android:id="@+id/spinnerHandle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerMiseries"
        android:layout_toEndOf="@+id/handle1" />

    <RadioGroup
        android:id="@+id/handle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerMiseries"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/simple1RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/handle1"
            android:text="simple" />

        <RadioButton
            android:id="@+id/double1RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="double" />

        <RadioButton
            android:id="@+id/triple1RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="triple" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/handle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/handle1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/simple2RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/handle1"
            android:text="simple" />

        <RadioButton
            android:id="@+id/double2RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="double" />

        <RadioButton
            android:id="@+id/triple2RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="triple" />

    </RadioGroup>

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/handle2"
        android:layout_toEndOf="@+id/handle1"
        android:layout_weight="1" />

</RelativeLayout>
