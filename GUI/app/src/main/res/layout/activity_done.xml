<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gui.counting.tarot.fr.gui.DoneActivity">

    <TextView
        android:id="@+id/scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scores" />

    <SeekBar
        android:id="@+id/seekScore"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:max="91"
        android:maxWidth="300dp"
        tools:minWidth="300dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekScore"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:text="Score de l'attaque" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Calculer les scores" />

    <TextView
        android:id="@+id/currentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:id="@+id/toggle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="ToggleButton"
        android:textOff="Petit"
        android:textOn="Petit" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seekScore"
        android:layout_marginTop="13dp"
        android:text="Bouts pour l'attaque" />

    <ToggleButton
        android:id="@+id/toggle21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggle1"
        android:layout_alignBottom="@+id/toggle1"
        android:layout_centerHorizontal="true"
        android:text="ToggleButton"
        android:textOff="21"
        android:textOn="21" />

    <ToggleButton
        android:id="@+id/toggleExcuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggle21"
        android:layout_alignBottom="@+id/toggle21"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:text="ToggleButton"
        android:textOff="Excuse"
        android:textOn="Excuse" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggle1"
        android:layout_marginTop="11dp"
        android:text="Contrat" />

    <RadioGroup
        android:id="@+id/contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioPetite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/contract"
            android:layout_alignStart="@+id/toggle1"
            android:layout_weight="1"
            android:text="Petite" />

        <RadioButton
            android:id="@+id/radioGarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Garde" />

        <RadioButton
            android:id="@+id/radioGardeSans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Garde Sans" />

        <RadioButton
            android:id="@+id/radioGardeContre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Garde contre" />

    </RadioGroup>

    <TextView
        android:id="@+id/taker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preneur"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/spinnerTaker" />

    <Spinner
        android:id="@+id/spinnerCalled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/calles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppelÃ©"
        android:layout_above="@+id/spinnerCalled" />

    <Spinner
        android:id="@+id/spinnerTaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calles"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />
</RelativeLayout>
